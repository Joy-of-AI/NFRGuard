{
  "rag_low_confidence": {
    "displayName": "RAG Low Confidence Scores",
    "description": "Alert when RAG queries return low confidence scores",
    "conditions": [
      {
        "displayName": "RAG confidence below threshold",
        "conditionThreshold": {
          "filter": "metric.type=\"custom.googleapis.com/nfrguard/rag/rag_confidence_score\"",
          "comparison": "COMPARISON_LESS_THAN",
          "thresholdValue": 0.3,
          "duration": "300s"
        }
      }
    ],
    "notificationChannels": [
      "projects/PROJECT_ID/notificationChannels/CHANNEL_ID"
    ],
    "alertStrategy": {
      "autoClose": "1800s"
    }
  },
  "rag_high_latency": {
    "displayName": "RAG High Query Latency",
    "description": "Alert when RAG queries take too long",
    "conditions": [
      {
        "displayName": "RAG query latency above threshold",
        "conditionThreshold": {
          "filter": "metric.type=\"custom.googleapis.com/nfrguard/rag/rag_query_latency\"",
          "comparison": "COMPARISON_GREATER_THAN",
          "thresholdValue": 1.0,
          "duration": "300s"
        }
      }
    ],
    "notificationChannels": [
      "projects/PROJECT_ID/notificationChannels/CHANNEL_ID"
    ],
    "alertStrategy": {
      "autoClose": "1800s"
    }
  },
  "rag_document_coverage_low": {
    "displayName": "RAG Document Coverage Low",
    "description": "Alert when document coverage is insufficient",
    "conditions": [
      {
        "displayName": "Document coverage below threshold",
        "conditionThreshold": {
          "filter": "metric.type=\"custom.googleapis.com/nfrguard/rag/rag_document_coverage\"",
          "comparison": "COMPARISON_LESS_THAN",
          "thresholdValue": 5,
          "duration": "600s"
        }
      }
    ],
    "notificationChannels": [
      "projects/PROJECT_ID/notificationChannels/CHANNEL_ID"
    ],
    "alertStrategy": {
      "autoClose": "3600s"
    }
  },
  "agent_health_degraded": {
    "displayName": "Agent Health Degraded",
    "description": "Alert when agent health is below threshold",
    "conditions": [
      {
        "displayName": "Agent health below threshold",
        "conditionThreshold": {
          "filter": "metric.type=\"custom.googleapis.com/nfrguard/rag/agent_health_percentage\"",
          "comparison": "COMPARISON_LESS_THAN",
          "thresholdValue": 80,
          "duration": "300s"
        }
      }
    ],
    "notificationChannels": [
      "projects/PROJECT_ID/notificationChannels/CHANNEL_ID"
    ],
    "alertStrategy": {
      "autoClose": "1800s"
    }
  }
}